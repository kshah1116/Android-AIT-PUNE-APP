<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lifeAtAit"
    android:background="@drawable/gradient_background">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sports"
                            android:textSize="30sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/gradient_background"
                            />
                        <HorizontalScrollView
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="insideInset"
                            android:scrollbarSize="4dp"
                            android:scrollIndicators="start"
                            android:fadeScrollbars="false"
                            android:scrollbarThumbHorizontal="@drawable/gradient_background"
                            android:layout_gravity="center_horizontal"

                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="0dp"

                                    android:background="@color/white"
                                    android:padding="5dp"
                                    android:src="@drawable/sportsclub" />

                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:background="@color/white"
                                    android:layout_marginLeft="0dp"
                                    android:src="@drawable/pace2020"/>
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/badminton"/>
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/cricket"/>
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/basketball"/>
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/gym"/>



                            </LinearLayout>
                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:background="@color/cardBackground"
                                android:padding="20dp"
                                android:layout_margin="10dp"
                                android:text="@string/sports"/>
                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cafeteria"
                            android:textSize="30sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/gradient_background"
                            />
                        <HorizontalScrollView
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="insideInset"
                            android:scrollbarSize="4dp"
                            android:scrollbarThumbHorizontal="@drawable/gradient_background"
                            android:fadeScrollbars="false"
                            android:layout_gravity="center_horizontal"


                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:background="@color/white"
                                    android:paddingRight="2dp"
                                    android:src="@drawable/coffee" />

                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/samosa"/>


                            </LinearLayout>
                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:background="@color/cardBackground"
                                android:padding="20dp"
                                android:layout_margin="10dp"
                                android:text="@string/cafe"/>
                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Library"
                            android:textSize="30sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/gradient_background"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@color/white"
                            android:src="@drawable/libraryentrance" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:background="@color/cardBackground"
                                android:padding="20dp"
                                android:layout_margin="10dp"
                                android:text="@string/library"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hostels"
                            android:textSize="30sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/gradient_background"
                            />
                        <HorizontalScrollView
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="insideInset"
                            android:scrollbarSize="4dp"
                            android:scrollbarThumbHorizontal="@drawable/gradient_background"
                            android:fadeScrollbars="false"
                            android:layout_gravity="center_horizontal"

                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:background="@color/white"
                                    android:layout_marginLeft="0dp"
                                    android:src="@drawable/hostelbuilding"/>
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/girlsroom"/>
                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:paddingRight="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/boyshostel"/>


                            </LinearLayout>
                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:background="@color/cardBackground"
                                android:padding="20dp"
                                android:layout_margin="10dp"
                                android:text="@string/hostel"/>
                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>


</FrameLayout>